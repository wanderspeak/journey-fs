{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "quotemark": [true, "single", "jsx-double"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "member-access": true,
    "semicolon": [true, "always", "ignore-bound-class-methods"],
    "trailing-comma": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    },
    "quotemark": [true, "single", "jsx-double"]
  }
}
